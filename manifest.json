{

  "manifest_version": 2,
  "name": "InstaRandomizer",
  "version": "1.0",
 
  "description": "Розширення що дозволяє вибрати переможця випадковим чином, працює по коментарях",
  "icons": {
	"48": "icons/mainicon.png",
	"128":"icons/mainicon_m.png",
	"256":"icons/mainicon_b.png"
  },
  "browser_action": {
	"default_icon": "icons/mainicon_m.png",
	"default_title": "InstaRandomizer",
	"default_popup": "popup/main.html"
  },

  "content_scripts": [
    {
		"matches": ["https://www.instagram.com/*/"],
	  "js": ["contjs/random.js"],
	  "css":["contjs/main.css"]
    }
  ],
  "permissions": [
	"tabs",
	"<all_urls>",
	"webRequest",
	"webRequestBlocking",
	"webNavigation",
	"storage",
	"contextMenus"
]

}
